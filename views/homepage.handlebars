<div class="row">
    <a href="/login" title="Image from freepnglogos.com"><img src="https://i.postimg.cc/1zWb264t/Beard-Icon-removebg-preview-1.png" width="80" height = "auto" alt="beard clipart, pin rico rey beard life pinterest nice beard" /></a>
    <h2>Login to post or comment</h2>
</div>

<!-- Loop Over all the reviews as a review -->
{{#each reviews as |review| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/reviews/{{review.id}}" class="title">{{review.title}}</a>
    </h2>
  </div>
  <div class="col-md-5">
     <p>Created by {{review.user.name}} on {{format_date review.date_created}}</p>
  </div>
</div>
{{/each}}
